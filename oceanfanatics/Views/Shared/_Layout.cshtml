@inject ICofoundryHelper Cofoundry

@{
    Layout = null;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ocean Fanatics</title>
    <link rel="shortcut icon" href="/images/OF logo white.png" type="image/x-icon" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/output.css" />
    @RenderSection("Meta", required: false)
    @if (IsSectionDefined("OpenGraph"))
    {
        @RenderSection("OpenGraph")
    }
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
</head>
<body class="bg-white font-sans leading-normal tracking-normal">

    <partial name="_navbar.cshtml" model="null" />

    <!--Container-->
    <div class="w-full mx-auto" style="padding-top:4rem">

        @RenderBody()
    </div>
    <!--/container-->


    <partial name="_footer.cshtml" model="null" />
    <script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/index.min.js"></script>
    <script src="https://unpkg.com/flowbite@1.4.7/dist/flowbite.js"></script>
    <script>


        const callback = function (entries) {
          entries.forEach((entry) => {
            //console.log(entry);

            if (entry.isIntersecting) {
                    entry.target.classList.add("animate-fade-in-down");
                } else {
                    entry.target.classList.remove("animate-fade-in-down");
                }
          });
        };

        const observer = new IntersectionObserver(callback);

        const targets = document.querySelectorAll(".js-show-on-scroll");
        targets.forEach(function (target) {
          target.classList.add("opacity-1");
          observer.observe(target);
        });

    </script>

</body>
</html>
